{
  // IMPORTANT: Set the "Root Directory" to "client" in your Vercel project settings.
  "builds": [
    {
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        // The output directory is relative to the Root Directory ("client")
        "outputDirectory": "../dist/public"
      }
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "redirects": [
    { "source": "/", "destination": "/home", "permanent": true }
  ]
}
